%header
  %nav.navbar.navbar-fixed-top.bg-faded.navbar-inverse.bg-inverse
    .container
      .navbar-header
        %button.btn-primary.navbar-toggle.collapsed{ 'data-toggle': 'collapse', 'data-target': '#nav-header-links', 'aria-expanded': 'false' }
          %i.glyphicon.glyphicon-align-justify
        = link_to 'Dag Motorsport', root_path, class: 'navbar-brand'

      .collapse.navbar-collapse#nav-header-links
        %ul.nav.navbar-nav.navbar-right
          %li= link_to 'Home', root_path
          %li= link_to 'Help', '#'
          %li= link_to 'Games', games_path
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{ href: '#', 'data-toggle': 'dropdown' } Account <b class='caret'></b>
              %ul.dropdown-menu
                %li= link_to 'Profile', '#'
                %li= link_to 'Settings', edit_user_registration_path
                %li.divider
                %li= link_to 'Log out', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Log in', new_user_session_path
